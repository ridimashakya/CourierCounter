@using CourierCounter.Models;
@model Worker

@{
    Layout = "_AdminLayout";
}

<ul class="list-group">
    <li class="list-group-item">Id : @Model.Id</li>
    <li class="list-group-item">Full Name : @Model.FullName</li>
    <li class="list-group-item">Email : @Model.Email</li>
    <li class="list-group-item">Contact Number : @Model.ContactNumber</li>
    <li class="list-group-item">Home Address : @Model.HomeAddress</li>
    <li class="list-group-item">License Number : @Model.LicenseNumber</li>
    <li class="list-group-item">Vehicle Number : @Model.VehicleRegistrationNumber</li>
    <li class="list-group-item">National Id : @Model.NationalIdNumber</li>
    <li class="list-group-item"> Status : @Model.Status</li>
</ul>

@if (Model.Status == CourierCounter.Models.Enum.StatusEnum.Pending)
{
    <li class="list-group-item d-flex justify-content-between align-items-center float-end">
        <div>
            <a class="btn btn-success btn-sm approve-btn" href="@("/worker/approvereject?id=" + Model.Id + "&status=Approved")">Approve</a>
            <a class="btn btn-danger btn-sm reject-btn" href="@("/worker/approvereject?id=" + Model.Id + "&status=Rejected")">Reject</a>
        </div>
    </li>
}











