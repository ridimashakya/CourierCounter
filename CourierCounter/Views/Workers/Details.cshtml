@using CourierCounter.Models;
@model Worker

@{
    Layout = "_AdminLayout";
}

<style>
    .btn-approve {
        background-color: #a8d5a2;
        color: #1e4620;
        border: none;
    }

        .btn-approve:hover {
            background-color: #98cc91;
        }

    .btn-reject {
        background-color: #f5b5b5;
        color: #5c1c1c;
        border: none;
    }

    .btn-reject:hover {
        background-color: #e99c9c;
    }

    .img-thumbnail {
        width: 400px;
        height: auto;
        margin: 8px 8px 8px 0; 
        object-fit: contain;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.15);
    }
</style>

@* each worker detail page *@
<ul class="list-group">
    <li class="list-group-item">Id : @Model.Id</li>

    <li class="list-group-item">
        Profile Image:<br />
        <img src="@(string.IsNullOrEmpty(Model.ProfileImagePath) ? Url.Content("~/images/no-image.png") : Url.Content("~/" + Model.ProfileImagePath))"
             alt="Profile Image" style="max-width:200px; max-height:200px;" />
    </li>

    <li class="list-group-item">Full Name : @Model.FullName</li>
    <li class="list-group-item">Email : @Model.Email</li>
    <li class="list-group-item">Contact Number : @Model.ContactNumber</li>
    <li class="list-group-item">Home Address : @Model.HomeAddress</li>
    <li class="list-group-item">License Number : @Model.LicenseNumber</li>
    <li class="list-group-item">Vehicle Number : @Model.VehicleRegistrationNumber</li>
    <li class="list-group-item">National Id : @Model.NationalIdNumber</li>
    <li class="list-group-item"> Status : @Model.Status</li>

    <li class="list-group-item">
        Vehicle Registration Image:
        <br />
        <a href="@Url.Content("~/" + Model.VehicleRegistrationNumberImagePath)" target="_blank" rel="noopener noreferrer">
            <img src="@Url.Content("~/" + Model.VehicleRegistrationNumberImagePath)" alt="Vehicle Registration" class="img-thumbnail" />
        </a>
    </li>
    <li class="list-group-item">
        License Image:
        <br />
        <a href="@Url.Content("~/" + Model.LicenseNumberImagePath)" target="_blank" rel="noopener noreferrer">
            <img src="@Url.Content("~/" + Model.LicenseNumberImagePath)" alt="License Image" class="img-thumbnail" />
        </a>
    </li>
    <li class="list-group-item">
        National ID Image:
        <br />
        <a href="@Url.Content("~/" + Model.NationalIdNumberImagePath)" target="_blank" rel="noopener noreferrer">
            <img src="@Url.Content("~/" + Model.NationalIdNumberImagePath)" alt="National ID Image" class="img-thumbnail" />
        </a>
    </li>
</ul>

@if (Model.Status == CourierCounter.Models.Enum.StatusEnum.Pending)
{
    <li class="list-group-item d-flex justify-content-end align-items-center">
        <a class="btn btn-sm me-2 shadow-sm px-3 btn-approve" href="@($"/worker/approvereject?id={Model.Id}&status=Approved")">
            ✅ Approve
        </a>
        <a class="btn btn-sm shadow-sm px-3 btn-reject" href="@($"/worker/approvereject?id={Model.Id}&status=Rejected")">
            ❌ Reject
        </a>
    </li>
}










